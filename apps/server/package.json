{
  "name": "server",
  "version": "v0.1.2",
  "description": "KoInsight back-end server",
  "license": "MIT",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc -b",
    "build:migrations": "tsc -p tsconfig.migrations.json",
    "dev": "NODE_ENV=development nodemon src/app.ts",
    "knex": "DATA_PATH=../../../data knex --knexfile ./src/knexfile.ts",
    "seed": "npm run knex seed:run --env=development",
    "test": "npm run build:migrations && vitest run",
    "test:watch": "npm run build:migrations && vitest",
    "test:coverage": "npm run build:migrations && vitest run --coverage"
  },
  "dependencies": {
    "@koinsight/common": "*",
    "@types/bcrypt": "^5.0.2",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "11.7.0",
    "cors": "2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "openai": "^4.91.1",
    "ramda": "^0.30.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "7.6.12",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/knex": "^0.16.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "1.4.12",
    "@types/node": "22.10.3",
    "@types/ramda": "^0.30.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "nodemon": "3.1.9",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "5.7.2",
    "vitest": "^3.1.1"
  }
}
