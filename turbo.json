{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NODE_ENV",
    "HOSTNAME",
    "PORT",
    "VITE_WEB_HOSTNAME",
    "VITE_WEB_PORT",
    "OPENAI_API_KEY",
    "OPENAI_API_URL",
    "OPENAI_API_VERSION"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"]
    }
  }
}
